doctype 5
html(lang="zh-cn")
  head
    title 用户登录
    link(rel='stylesheet', href='/stylesheets/admin.css')
    script(src='/stylesheets/jquery-1.7.2.min.js')
  body
    .mod_login
      header
        h1.logo web 本机管理 #{error}
      .mod_login_main
        form(method="POST",id="login-form")
          .item
            label(for="user_name") 用户名:
            input(type="text",name="name",id="user_name")
          .item
            label(for="user_pass") 密码:
            input(type="password",name="pass",id="user_pass")
          .item
            button(type="submit",class="btn btn-small")
              a Login
        .clearfix
